@{
    ViewData["Title"] = "Monitoring";
}

    

<div id="dashboard">
    <div class="row">
        <div class="col-sm-12 col-md-8">
            <h1 class="title">SuperThings Extravaganza Monitor</h1>
        </div>
        <div class="col-sm-12 col-md-4">
            <div class="total-count-container">
                Total
                <div class="total-count"> {{registerCount}}</div>
            </div>
        </div>
    </div>


    <div class="row table-container">
        <div class="col-sm-12 col-md-6">
            <h4>Most Recent 10 Registrants</h4>
            <table class="table table-condensed ">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="entry of recent">
                        <td>{{entry.fullName}}</td>
                        <td>{{entry.email}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-12 col-md-6">
            <h4>Top 10 Favorite Integers</h4>
            <table class="table table-condensed ">
                <thead>
                    <tr>
                        <th>Value</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="fav of favoriteIntegers">
                        <td>{{fav.integerValue}}</td>
                        <td>{{fav.count}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
